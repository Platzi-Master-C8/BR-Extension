{
  "name": "GetHired Extension",
  "description": "The best job tracking extension ever!",
  "version": "0.1",
  "manifest_version": 3,
  "background": {
    "service_worker": "./background.js"
  },
  "options_page": "./options.html",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs",
    "contextMenus"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./icon16.png",
      "32": "./icon32.png",
      "48": "./icon48.png",
      "128": "./icon128.png"
    }
  },
  "icons": {
    "16": "./icon16.png",
    "32": "./icon32.png",
    "48": "./icon48.png",
    "128": "./icon128.png"
  }
}
